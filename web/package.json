{
  "name": "wikijump",
  "private": true,
  "license": "agpl-3.0-or-later",
  "scripts": {
    "build-container": "vite build && cd web && pnpm -s build",
    "changeset": "changeset",
    "compose": "cd ../install/local/dev && cross-env DOCKER_BUILDKIT=1 docker-compose -p wikijump -f docker-compose.yaml -f docker-compose.dev.yaml",
    "compose-sudo": "cd ../install/local/dev && cross-env DOCKER_BUILDKIT=1 sudo -E docker-compose -p wikijump -f docker-compose.yaml -f docker-compose.dev.yaml",
    "cover": "vitest --coverage --run",
    "dev": "esr scripts/dev.js",
    "lint": "run-p -lns lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"modules/**/*.{js,ts}\" \"resources/**/*.{js,ts}\"",
    "lint:fix": "run-p -lns lint:fix:eslint lint:fix:stylelint lint:fix:prettier",
    "lint:fix:eslint": "eslint \"modules/**/*.{js,ts}\" \"resources/**/*.{js,ts}\" --fix",
    "lint:fix:prettier": "prettier --write --ignore-path \"../.prettierignore\" --ignore-unknown \"**/*.php\" \"modules/**\" \"resources/**\"",
    "lint:fix:stylelint": "stylelint \"modules/**/*.{scss,svelte}\" \"resources/**/*.{scss,svelte}\" --fix",
    "lint:prettier": "prettier --ignore-path \"../.prettierignore\" --ignore-unknown --check \"**/*.php\" \"modules/**\" \"resources/**\"",
    "lint:stylelint": "stylelint \"modules/**/*.{scss,svelte}\" \"resources/**/*.{scss,svelte}\"",
    "modules:pack": "node scripts/vite-pack.js",
    "modules:publish": "node scripts/publish-all.js",
    "modules:version": "changeset version",
    "taze": "echo [taze] root && taze major && echo [taze] modules && cd modules && taze major -r && echo [taze] frontend && cd ../resources && taze major && echo [taze] legacy frontend && cd ../web && taze major",
    "taze:write": "echo [taze:write] root && taze major -w && echo [taze:write] modules && cd modules && taze major -r -w && echo [taze:write] frontend && cd ../resources && taze major -w && echo [taze:write] legacy frontend && cd ../web && taze major -w",
    "test": "vitest --run",
    "test:ui": "vitest --watch --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc",
    "validate": "run-p -lns lint typecheck",
    "nabs": "nabs"
  },
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "dependencies": {
    "@ltd/j-toml": "^1.30.0",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.39",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "diff-match-patch": "^1.0.5",
    "esbuild": "^0.14.27",
    "js-yaml": "^4.1.0",
    "laravel-vite": "^0.0.24",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "postcss-html": "^1.3.0",
    "postcss-merge-queries": "^1.0.3",
    "postcss-scss": "^4.0.3",
    "rollup": "^2.70.1",
    "sass": "^1.49.9",
    "svelte": "^3.46.4",
    "svelte-preprocess": "^4.10.4",
    "typescript": "^4.6.2",
    "typescript-svelte-plugin": "^0.3.1",
    "vite": "2.9.0-beta.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@ota-meshi/eslint-plugin-svelte": "^0.29.0",
    "@prettier/plugin-php": "0.18.0",
    "@testing-library/dom": "^8.11.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@typescript-eslint/typescript-estree": "^5.15.0",
    "c8": "^7.11.0",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.11.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jsdom": "^19.0.0",
    "nabs": "^0.3.0",
    "package-json": "^7.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.31",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-svelte": "^2.6.0",
    "stylelint": "^14.5.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "svelte-eslint-parser": "^0.15.0",
    "taze": "^0.4.6",
    "vitest": "^0.6.1"
  },
  "engineStrict": true,
  "engines": {
    "pnpm": "*",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  }
}
