{
  "name": "wikijump",
  "private": true,
  "license": "agpl-3.0-or-later",
  "scripts": {
    "build": "run-p build:legacy build:vite && pnpm build:local",
    "build-container": "run-p build:legacy build:vite",
    "build-sudo": "run-p build-sudo:legacy build-sudo:vite && pnpm build-sudo:local",
    "build-sudo:legacy": "node scripts/build-legacy.js build",
    "build-sudo:local": "pnpm compose-sudo build",
    "build-sudo:vite": "vite build",
    "build:legacy": "node scripts/build-legacy.js build",
    "build:local": "pnpm compose build",
    "build:vite": "vite build",
    "changeset": "changeset",
    "compose": "export DOCKER_BUILDKIT=1 && cd ../install/local/dev && docker-compose -p wikijump -f docker-compose.yaml -f docker-compose.dev.yaml",
    "compose-sudo": "export DOCKER_BUILDKIT=1 && cd ../install/local/dev && sudo -E docker-compose -p wikijump -f docker-compose.yaml -f docker-compose.dev.yaml",
    "cover": "wtr --playwright --coverage",
    "dev": "node scripts/dev.js",
    "dev-sudo": "node scripts/dev.js sudo",
    "lint": "run-p -lns lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"modules/**/*.{js,ts}\" \"resources/**/*.{js,ts}\"",
    "lint:fix": "run-p -lns lint:fix:eslint lint:fix:stylelint lint:fix:prettier",
    "lint:fix:eslint": "eslint \"modules/**/*.{js,ts}\" \"resources/**/*.{js,ts}\" --fix",
    "lint:fix:prettier": "prettier --write --ignore-path \"../.prettierignore\" --ignore-unknown \"**/*.php\" \"modules/**\" \"resources/**\"",
    "lint:fix:stylelint": "stylelint \"modules/**/*.scss\" \"resources/**/*.scss\" --fix",
    "lint:prettier": "prettier --ignore-path \"../.prettierignore\" --ignore-unknown --check \"**/*.php\" \"modules/**\" \"resources/**\"",
    "lint:stylelint": "stylelint \"modules/**/*.scss\" \"modules/**/*.scss\" \"resources/**/*.scss\"",
    "modules:pack": "node scripts/vite-pack.js",
    "modules:publish": "node scripts/publish-all.js",
    "modules:version": "changeset version",
    "serve": "export DOCKER_BUILDKIT=1 && cd ../install/local/dev && docker-compose -p wikijump -f docker-compose.yaml build && docker-compose -p wikijump -f docker-compose.yaml up",
    "serve-sudo": "export DOCKER_BUILDKIT=1 && cd ../install/local/dev && sudo -E docker-compose -p wikijump -f docker-compose.yaml build && sudo -E docker-compose -p wikijump -f docker-compose.yaml up",
    "test": "wtr --playwright",
    "typecheck": "tsc",
    "validate": "run-p -lns lint typecheck",
    "nabs": "nabs"
  },
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "dependencies": {
    "@ltd/j-toml": "^1.24.0",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.32",
    "chalk": "4.1.2",
    "compress-tag": "^2.0.1",
    "csstype": "^3.0.10",
    "esbuild": "^0.14.2",
    "fs-extra": "^10.0.0",
    "js-yaml": "^4.1.0",
    "koa-connect": "^2.1.0",
    "laravel-vite": "^0.0.23",
    "nabs": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "package-json": "^7.0.0",
    "query-string": "6.14.1",
    "rollup": "^2.60.2",
    "sass": "^1.44.0",
    "svelte": "^3.44.2",
    "svelte-preprocess": "^4.9.8",
    "typescript": "^4.5.2",
    "vite": "^2.7.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@prettier/plugin-php": "^0.17.6",
    "@testing-library/svelte": "^3.0.3",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@typescript-eslint/typescript-estree": "^5.6.0",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^8.4.1",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-svelte3": "^3.2.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "postcss": "^8.4.4",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-svelte": "^2.5.1",
    "pretty-ms": "^7.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.1"
  },
  "engineStrict": true,
  "engines": {
    "pnpm": "*",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  }
}
