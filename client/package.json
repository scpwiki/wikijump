{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "private": true,
  "scripts": {
    "build": "pnpm --parallel --if-present -r build",
    "build:modules": "pnpm --filter {modules} --parallel --if-present -r build",
    "build:web": "pnpm --filter {web} --parallel --if-present -r build",
    "cover": "wtr --playwright --coverage",
    "dev:dev-sandbox": "pnpm --filter dev-sandbox dev",
    "lint": "run-p lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "lint:fix": "run-p lint:fix:eslint lint:fix:stylelint lint:fix:prettier",
    "lint:fix:eslint": "eslint \"./**/*.js\" \"./**/*.ts\" --fix",
    "lint:fix:prettier": "prettier --write --ignore-unknown \"modules/**\" \"web/**\"",
    "lint:fix:stylelint": "stylelint \"modules/**/*.scss\" \"web/**/*.scss\" --fix",
    "lint:prettier": "prettier --ignore-unknown --check \"modules/**\" \"web/**\"",
    "lint:stylelint": "stylelint \"modules/**/*.scss\" \"web/**/*.scss\"",
    "test": "wtr --playwright",
    "typecheck": "tsc",
    "validate": "run-p lint typecheck",
    "nabs": "nabs"
  },
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@ltd/j-toml": "^1.12.2",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.23",
    "@testing-library/svelte": "^3.0.3",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@typescript-eslint/typescript-estree": "^4.31.0",
    "@web/test-runner": "^0.13.17",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^7.32.0",
    "eslint-plugin-regexp": "^1.1.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "js-yaml": "^4.1.0",
    "koa-connect": "^2.1.0",
    "nabs": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "prettier-plugin-jsdoc": "^0.3.24",
    "prettier-plugin-organize-imports": "^2.3.3",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.56.3",
    "sass": "^1.39.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "svelte": "^3.42.5",
    "svelte-preprocess": "^4.9.4",
    "typescript": "^4.4.3",
    "vite": "^2.5.6",
    "vite-tsconfig-paths": "^3.3.14"
  },
  "engineStrict": true,
  "engines": {
    "pnpm": "*",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm"
  }
}
