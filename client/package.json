{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "description": "Private root package for the Wikijump client monorepo.",
  "private": true,
  "scripts": {
    "build": "ultra -r build",
    "cover": "pnpm test:compile && nyc --use-spawn-wrap npm run test:run || true",
    "dev:dev-sandbox": "ultra --raw -r --filter \"web/dev-sandbox\" dev",
    "force-build": "ultra --rebuild -r build",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:stylelint",
    "lint:eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "lint:fix": "pnpm lint:fix:eslint && pnpm lint:fix:prettier && pnpm lint:fix:stylelint",
    "lint:fix:eslint": "eslint \"./**/*.js\" \"./**/*.ts\" --fix",
    "lint:fix:prettier": "prettier --write --ignore-unknown \"modules/**\" \"web/**\"",
    "lint:fix:stylelint": "stylelint \"modules/**/*.scss\" \"web/**/*.scss\" --fix",
    "lint:prettier": "prettier --ignore-unknown --check \"modules/**\" \"web/**\"",
    "lint:stylelint": "stylelint \"modules/**/*.scss\" \"web/**/*.scss\"",
    "test": "pnpm test:compile && pnpm test:run",
    "test:compile": "trash tests-dist && node scripts/build-tests.js",
    "test:run": "uvu ./tests-dist/dist test-megabundle.+js$",
    "typecheck": "tsc",
    "validate": "ultra --concurrency 10 validate:cmd",
    "validate:cmd": "pnpm lint && pnpm typecheck",
    "nabs": "nabs"
  },
  "ultra": {
    "concurrent": [
      "lint",
      "validate:cmd"
    ]
  },
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git",
    "directory": "client"
  },
  "bugs": "https://scuttle.atlassian.net/servicedesk/customer/portal/2",
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@happy-dom/global-registrator": "^2.21.0",
    "@ltd/j-toml": "^1.12.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.11",
    "@types/fs-extra": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@typescript-eslint/typescript-estree": "^4.28.0",
    "babel-plugin-istanbul": "^6.0.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.29.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-regexp": "^0.12.1",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^10.0.0",
    "globby": "^12.0.2",
    "happy-dom": "^2.21.0",
    "js-yaml": "^4.1.0",
    "nabs": "^0.3.0",
    "nyc": "^15.1.0",
    "postcss": "^8.3.5",
    "prettier": "^2.3.1",
    "prettier-plugin-jsdoc": "^0.3.23",
    "prettier-plugin-organize-imports": "^2.1.0",
    "prettier-plugin-svelte": "^2.3.1",
    "rollup": "^2.52.2",
    "sass": "^1.35.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.7.3",
    "trash-cli": "^4.0.0",
    "typescript": "^4.3.4",
    "ultra-runner": "^3.10.5",
    "uvu": "^0.5.1",
    "vite": "^2.3.8",
    "vite-tsconfig-paths": "^3.3.13"
  }
}
