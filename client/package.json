{
  "name": "root",
  "license": "agpl-3.0-or-later",
  "description": "Private root package for the Wikijump client monorepo.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --loglevel success",
    "build": "ultra --rebuild -r build",
    "dev:dev-sandbox": "ultra --raw -r --filter \"web/dev-sandbox\" dev",
    "lerna:clean": "lerna clean --yes --loglevel success",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"./**/*.js\" \"./**/*.ts\"",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:eslint": "eslint \"./**/*.js\" \"./**/*.ts\" --fix",
    "lint:fix:prettier": "prettier --write \"modules/\" \"web/\"",
    "lint:prettier": "prettier --check \"modules/\" \"web/\"",
    "test": "npm run test:compile && nyc npm run test:run",
    "test:compile": "trash tests-dist && node scripts/build-tests.js",
    "test:run": "uvu ./tests-dist/dist test-megabundle.+js$",
    "typecheck": "tsc",
    "update": "npm i && ultra --raw update:cmd",
    "update:cmd": "npm run lerna:clean && npm run bootstrap && npm run build",
    "validate": "ultra --concurrency 10 validate:cmd",
    "validate:cmd": "npm run lint:eslint && npm run lint:prettier && npm run typecheck",
    "nabs": "nabs"
  },
  "ultra": {
    "concurrent": [
      "validate:cmd"
    ]
  },
  "workspaces": [
    "modules/*",
    "web/*"
  ],
  "browserslist": [
    "supports es6-module and > 0.2% and last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie > 0"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scpwiki/wikijump.git",
    "directory": "client"
  },
  "bugs": "https://scuttle.atlassian.net/servicedesk/customer/portal/2",
  "homepage": "https://github.com/scpwiki/wikijump#readme",
  "devDependencies": {
    "@happy-dom/global-registrator": "^2.19.0",
    "@ltd/j-toml": "^1.12.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.4.2",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.9",
    "@types/fs-extra": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@typescript-eslint/typescript-estree": "^4.22.1",
    "babel-plugin-istanbul": "^6.0.0",
    "esbuild": "^0.11.20",
    "eslint": "^7.26.0",
    "eslint-plugin-clean-regex": "^0.5.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-svelte3": "^3.2.0",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.3",
    "happy-dom": "^2.19.0",
    "include-media": "^1.4.10",
    "lerna": "^4.0.0",
    "nabs": "^0.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "2.2.0",
    "sass": "^1.32.12",
    "svelte": "^3.38.2",
    "svelte-preprocess": "^4.7.3",
    "trash-cli": "^4.0.0",
    "typedoc": "^0.20.36",
    "typescript": "4.3.0-beta",
    "ultra-runner": "^3.10.5",
    "uvu": "^0.5.1",
    "vite": "^2.2.4"
  }
}
