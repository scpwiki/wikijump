root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,ftml}]
trim_trailing_whitespace = false

[{Makefile,*.mk,*.sh}]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,json}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{html,xml,svg,svelte}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4
